{
  "name": "mds",
  "version": "0.0.1",
  "description": "Modul Design System - TypeScript/React/Vite",
  "type": "module",
  "main": "./dist/mds.umd.cjs",
  "module": "./dist/mds.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/mds.js",
      "require": "./dist/mds.umd.cjs"
    },
    "./styles/tokens.css": "./dist/styles/tokens.css",
    "./styles/reset.css": "./dist/styles/reset.css",
    "./styles/global.css": "./dist/styles/global.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "npm run generate:tokens && tsc -p tsconfig.build.json && vite build && npm run build:copy-css",
    "build:copy-css": "mkdir -p dist/styles && cp src/styles/*.css dist/styles/",
    "build:storybook": "npm run generate:tokens && storybook build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext ts,tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\" \"docs/**/*.{mdx,md}\"",
    "typecheck": "tsc --noEmit",
    "generate:tokens": "tsx scripts/generate-tokens.ts"
  },
  "keywords": [
    "design-system",
    "react",
    "typescript",
    "components",
    "ui"
  ],
  "author": "Alexis Baud",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^10.0.7",
    "@storybook/addon-docs": "^10.0.7",
    "@storybook/react-vite": "^10.0.7",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^10.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^1.0.4",
    "eslint-plugin-storybook": "10.0.7"
  }
}
